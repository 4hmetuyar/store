{
  "rangeStrategy": "bump",
  "separateMajorMinor": false,
  "timezone": "UTC",
  "schedule": ["after 4:00am every 2nd week of the month"],
  "baseBranches": ["master"],
  "ignoreDeps": ["@types/node"],
  "packageFiles": ["package.json", "packages/**/package.json"],
  "major": {
    "devDependencies": {
      "enabled": false
    }
  },
  "packageRules": [
    {
      "extends": ["monorepo:angular", "monorepo:angularcli"],
      "groupName": "@angular",
      "schedule": ["before 3:00am every 2nd week of the month"]
    },
    {
      "packageNames": ["typescript"],
      "updateTypes": "patch",
      "schedule": ["before 3:00am every 2nd week of the month"]
    }
  ]
}
